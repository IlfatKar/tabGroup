{
  "manifest_version": 3,
  "name": "Tab Groups",
  "version": "1.0",
  "description": "Allows you to group tabs in the bar menu.",
  "permissions": ["tabs", "tabHide", "activeTab", "storage", "menus"],
  "action": {
    "default_title": "Create Tab",
    "default_popup": "createTab.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "UltraSimpleTabGroups@succiezi.ru",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  }
}
